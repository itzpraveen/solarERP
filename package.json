{
  "name": "solarerp",
  "version": "1.0.0",
  "description": "Solar ERP System for managing solar installation projects",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --coverage",
    "build": "cd client-new && npm install && npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "create-admin": "node src/scripts/createAdminUser.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:status": "npx sequelize-cli db:migrate:status",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "local": "./run-local.sh",
    "local:backend": "npm run dev",
    "local:frontend": "cd client-new && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "railway:build": "npm install && npm run build && npm run db:migrate",
    "railway:start": "npm start",
    "startup": "./startup.sh"
  },
  "keywords": [
    "solar",
    "erp",
    "project management",
    "renewable energy"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
