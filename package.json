{
  "name": "solarerp",
  "version": "1.0.0",
  "description": "Solar ERP System for managing solar installation projects",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "cross-env DEBUG=* nodemon --inspect src/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:frontend": "cd client-new && npm start",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js,.jsx --cache",
    "lint:fix": "eslint . --ext .js,.jsx --fix --cache",
    "format": "prettier --write \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "prepare": "husky || true",
    "pre-commit": "lint-staged",
    "commit": "./scripts/commit-helper.sh",
    "build": "cd client-new && npm install && npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:analyze": "cd client-new && npm run build:analyze",
    "clean": "rm -rf node_modules client-new/node_modules client-new/build coverage .eslintcache",
    "clean:install": "npm run clean && npm install && cd client-new && npm install",
    "create-admin": "node src/scripts/createAdminUser.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:status": "npx sequelize-cli db:migrate:status",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "local": "./run-local.sh",
    "local:backend": "npm run dev",
    "local:frontend": "cd client-new && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "railway:build": "npm install && npm run build && npm run db:migrate",
    "railway:start": "npm start",
    "startup": "./startup.sh",
    "check:deps": "npx npm-check-updates",
    "update:deps": "npx npm-check-updates -u && npm install",
    "security:check": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "solar",
    "erp",
    "project management",
    "renewable energy"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.1",
    "@cypress/code-coverage": "^3.14.6",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.15.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  }
}
