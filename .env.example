# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solarerp_dev
DB_USERNAME=postgres
DB_PASSWORD=your-postgres-password
DB_SSL=false

# Test Database
DB_NAME_TEST=solarerp_test

# Server Configuration
NODE_ENV=development
PORT=5000

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration
EMAIL_FROM=noreply@solarerp.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email-username
EMAIL_PASSWORD=your-email-password

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Admin User Configuration (for initial setup only)
ADMIN_EMAIL=admin@solarerp.com
ADMIN_PASSWORD=ChangeMeImmediately123!
ADMIN_NAME=System Administrator

# Client Application URL
CLIENT_URL=http://localhost:3000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log